{
  "name": "TextCleaner",
  "version": "1.0.0",
  "description": "AI text remover - wrapped for Electron",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder --publish never",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^8.1.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.textcleaner.app",
    "productName": "TextCleaner",
    "directories": { "buildResources": "build" },
    "files": ["dist/**/*", "electron/**/*", "package.json"],
    "win": { "target": ["nsis","zip"] },
    "mac": { "target": ["dmg","zip"] },
    "linux": { "target": ["AppImage","deb"] },
    "nsis": { "oneClick": false, "perMachine": false }
  },
  "dependencies": {}
}
